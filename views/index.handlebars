<h1 style="margin-top:20px;margin-bottom:30px;">Eat-Da-Burger!</h1>
<div class="container">
  <div class="row">

    <div class="card col-md-4 col-sm-6 col-xs-12" style="width: 30rem;" id="addBurger">
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{!-- changed devoured to true: --}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}

      </ul>
    </div>

    <div class="card col-md-3 offset-md-4 col-sm-6 col-xs-12" style="width: 30rem;" id="deleteBurger">

      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}

      </ul>

    </div>

    <button type="submit" class="mx-auto btn btn-danger btn-lg" id="submtB" style="border-radius: 25px;">
      <h2 id="addIt">Add Burger</h2>
      <input type="text" id="zBurger" name="burger_name" style="width: 20rem" placeholder="burger type">
    </button>

  </div>

  <div class="col display-burger">

    <script>
      function changeLoc() {
        var item = document.querySelector("li")
        item.style = "margin-left: 90%";
      }
      var moveIt = document.querySelector(".display-burger")
      moveIt.addEventListener("click", changeLoc)
    </script>

  </div>

</div>


</form>
</div>