<h1>Eat-Da-Burger!</h1>

<h2>{{ Burger }}</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
    {{/unless}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="zBurger">Burger Type:</label>
    <input type="text" id="zBurger" name="burger">
     <button type="submit">Submit Order</button>
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
    
  </div>

  <button type="submit">Devoured</button>
</form>
